{
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "node16",
    "target": "ES2023",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true //isso ta aqui por causa de um bug do drizzle-orm (https://github.com/drizzle-team/drizzle-orm/issues/3617)
    //assim que resolver, tirar essa bomba
  },
  "include": ["src/**/*.ts"],
}
