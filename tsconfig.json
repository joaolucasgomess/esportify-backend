{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true, //isso ta aqui por causa de um bug do drizzle-orm (https://github.com/drizzle-team/drizzle-orm/issues/3617)
    //assim que resolver, tirar essa bomba
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*.ts"],
}
